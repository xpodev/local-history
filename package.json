{
	"name": "local-history",
	"displayName": "Local History",
	"description": "Local diff system for quick restoration of file versions",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "local-history.restore-patch",
				"title": "Local History: Restore Patch"
			},
			{
				"command": "local-history.restore-commit",
				"title": "Local History: Restore Commit"
			},
			{
				"command": "local-history.create-commit",
				"title": "Local History: Create Commit"
			},
			{
				"command": "local-history.refresh-file-brwoser",
				"title": "Local History: Refresh File Browser"
			},
			{
				"command": "local-history.diff-browser.open-source",
				"title": "Local History: Open Source"
			},
			{
				"command": "local-history.diff-browser.restore-patch",
				"title": "Restore Patch"
			},
			{
				"command": "local-history.diff-browser.open-commit",
				"title": "Local History: Open Commit"
			},
			{
				"command": "local-history.diff-browser.open-patch",
				"title": "Local History: Open Patch"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "local-history",
					"title": "Local History",
					"icon": "media/lh-logo.svg"
				}
			]
		},
		"views": {
			"local-history": [
				{
					"id": "localHistoryFileBrowser",
					"name": "Files",
					"icon": "media/lh-logo.svg",
					"contextualTitle": "Local History"
				},
				{
					"id": "localHistoryDiffBrowser",
					"name": "Diffs",
					"icon": "media/lh-logo.svg",
					"contextualTitle": "Local History"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "localHistoryDiffBrowser",
				"contents": "Local History will appear here"
			}
		],
		"menus": {
			"view/item/context": [
				{
				  "command": "local-history.diff-browser.restore-patch",
				  "when": "view == localHistoryDiffBrowser && viewItem == browserDiffItem"
				}
			  ]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/diff": "^5.0.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"diff": "^5.0.0"
	}
}